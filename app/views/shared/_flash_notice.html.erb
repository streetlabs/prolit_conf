<%- if flash[:notice] || flash[:error] || flash[:alert] -%>
  <div id="flash-notice">
    <%- unless flash[:notice].blank? -%>
      <div class="flash-success">
        <%= flash[:notice] -%>
      </div>
    <% end -%>

    <%- unless flash[:error].blank? -%>
      <div class="flash-failure">
        <%= flash[:error] -%>
      </div>
    <% end -%>

    <%- unless flash[:alert].blank? -%>
      <div class="flash-failure">
        <%= flash[:alert] -%>
      </div>
    <% end -%>

    <div class="flash-close"></div>
  </div>
<% end -%>

<div class="clear"></div>
